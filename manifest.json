{
  "manifest_version": 2,
  "name": "unpolarise",
  "description": "This extension reads external links shared on Facebook news feed page",
  "version": "1.0",
  "permissions": ["tabs", "activeTab", "https://www.facebook.*", "https://unpolarise.herokuapp.com*", "//connect.facebook.net/en_US/sdk.js"],
  "content_scripts": [{
      "run_at" :"document_end",
      "matches": ["<all_urls>"],
      "js": ["jquery.js", "unpolarise.js", "popup.js"],
      "css": ["popup.css"],
      "all_frames": true
    }],
  "browser_action": {
    "default_icon": "favicon.png",
    "default_popup": "popup.html",
    "default_title": "Click here!"
  },
  "permissions": [
    "activeTab",
    "https://unpolarise.herokuapp.com/links",
    "https://ajax.googleapis.com/"
  ]
}

