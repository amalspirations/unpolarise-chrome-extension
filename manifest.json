{
  "manifest_version": 2,
  "name": "unpolarise",
  "description": "This extension reads external links shared on Facebook news feed page",
  "version": "1.0",
  "permissions": ["tabs", "https://www.facebook.*", "activeTab"],
  "content_scripts": [{
      "run_at" :"document_end",
      "matches": ["https://www.facebook.com/*"],
      "js": ["jquery.js", "unpolarise.js"],
      "css": ["unpolarise.css"]
    }],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "unpolarise.html",
    "default_title": "Click here!"
  },
  "permissions": [
    // TODO delete "http://localhost:3000",
    // TODO add the app url here
    "activeTab",
    "https://ajax.googleapis.com/",
    "https://requestb.in/"
  ]
}
